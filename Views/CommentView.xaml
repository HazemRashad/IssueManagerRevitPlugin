<hc:Window  x:Class="IssueManager.Views.CommentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssueManager.Views"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Comments" Height="700" Width="700" WindowStartupLocation="CenterScreen">
    
    <hc:Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IssueManager;component/Resources/HandyControlResources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/IssueManager;component/Resources/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </hc:Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Comments List -->
        <Border Grid.Row="0"
             BorderBrush="{StaticResource BorderBrush}"
             BorderThickness="1"
             CornerRadius="4"
             Padding="5"
             Background="{StaticResource RegionBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                        Text="Comments:" 
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="3,3"/>

                <ScrollViewer Grid.Row="1"
                           hc:ScrollViewerAttach.Orientation="Vertical"
                           VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding IssueComments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" 
                                     BorderThickness="1" 
                                     CornerRadius="4" 
                                     Padding="10"
                                     Margin="5"
                                     Background="White">
                                    <StackPanel VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Message}" 
                                                TextWrapping="Wrap"
                                                Style="{StaticResource TextBlockDefaultDanger}"
                                                FontWeight="SemiBold"
                                                HorizontalAlignment="Left"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="By:" 
                                                    FontWeight="Bold"
                                                    FontSize="10"/>
                                            <TextBlock Text="{Binding CreatedBy}" 
                                                    Margin="5,0,10,0"
                                                    FontSize="10"/>
                                            <TextBlock Text="At:" 
                                                    FontWeight="Bold"
                                                    FontSize="10"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd MMM, yyyy HH:mm}'}"
                                                    Margin="5,0,10,0"
                                                    FontSize="10"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Divider -->
        <hc:Divider Grid.Row="1" Orientation="Horizontal" Margin="0,10"/>

        <!-- Comment Input -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBox hc:InfoElement.Placeholder="Write a Comment"
                  VerticalContentAlignment="Top"
                  Padding="5,5"
                  Style="{StaticResource TextBoxExtend}"
                  Text="{Binding CommentText, UpdateSourceTrigger=PropertyChanged}" 
                  AcceptsReturn="True" 
                  Height="80" 
                  Margin="0,10,0,15"/>
            <Button Content="Submit"
                 Width="80"
                 Style="{StaticResource ButtonPrimary}"
                 Command="{Binding SubmitCommand}" 
                 HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</hc:Window>
