<Window x:Class="IssueManager.Views.AddIssueView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Issue" Height="500" Width="1000"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================================================== -->

        <Grid Grid.Row="0" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Title:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox Grid.Column="1" Height="25"/>
            <TextBlock Grid.Column="2" Text="Status:" VerticalAlignment="Center" Margin="70 0 8 0"/>
            <TextBlock Grid.Column="3" Text="Active" VerticalAlignment="Center" Margin="0 0 20 0"/>
        </Grid>

        <!-- ================================================== -->

        <Grid Grid.Row="1" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Type:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="1" Margin="4 4 40 4" Height="25"/>
            <TextBlock Grid.Column="2" Text="Area:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="3" Margin="4 4 40 4" Height="25"/>
            <TextBlock Grid.Column="4" Text="Milestone:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="5" Margin="4 4 40 4" Height="25"/>
            <TextBlock Grid.Column="6" Text="Labels:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox Grid.Column="7" Margin="4" Height="25" HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- ================================================== -->

        <Grid Grid.Row="2" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Priority:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="1" Margin="4 4 40 4" Height="25"/>

            <TextBlock Grid.Column="2" Text="Assigned to:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="3" Margin="4 4 40 4" Height="25"/>

            <TextBlock Grid.Column="4" Text="Deadline:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <DatePicker Grid.Column="5" Margin="4 4 40 4" Height="25"/>

            <Button Grid.Column="6" Content="Clear X" Height="25" HorizontalAlignment="Right" Margin="4 4 40 4" Padding="4"/>
        </Grid>

        <!-- ================================================== -->

        <Grid Grid.Row="3" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Approval:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox Grid.Column="1" Margin="4 4 40 4" Height="25" IsEnabled="False"/>

            <TextBlock Grid.Column="2" Text="Custom field 2:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox Grid.Column="3" Margin="4 4 40 4" Height="25" IsEnabled="False"/>

            <TextBlock Grid.Column="4" Text="Custom field 3:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <TextBox Grid.Column="5" Margin="4 4 40 4" Height="25" IsEnabled="False"/>

            <TextBlock Grid.Column="6" Text="Visible for:" VerticalAlignment="Center" Margin="0 0 8 0"/>
            <ComboBox Grid.Column="7" Margin="4" Height="25" IsEnabled="False"/>
        </Grid>

        <!-- ================================================== -->

        <StackPanel Grid.Row="4" Margin="0 0 0 8">
            <TextBlock Text="Description" Margin="4"/>
            <TextBox Height="30"/>
        </StackPanel>

        <!-- ================================================== -->

        <Grid Grid.Row="5" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <TextBlock Text="Comment:" Margin="0 0 0 4"/>
                <TextBox AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto"/>
                <TextBlock Text="Notify:" Margin="0 0 0 4"/>
                <ComboBox Height="25"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Image Height="100" Stretch="UniformToFill" Margin="0 0 0 8" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 2">
                    <Button Content="📷" Width="25" Margin="2"/>
                    <Button Content="🔄" Width="25" Margin="2"/>
                    <Button Content="🖍️" Width="25" Margin="2"/>
                    <Button Content="❌" Width="25" Margin="2"/>
                </StackPanel>
                <ComboBox Height="25" Margin="0 4 0 0"/>
                <CheckBox Content="Save selection as selected components" Margin="0 4 0 0"/>
                <CheckBox Content="Save override colors"/>
            </StackPanel>
        </Grid>

        <!-- ================================================== -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Help" Width="70" Margin="4" HorizontalAlignment="Left"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <TextBlock Text="* Mandatory fields" VerticalAlignment="Center" Margin="10 0"/>
                <Button Content="Save" Width="70" Margin="4"/>
                <Button Content="Cancel" Width="70" Margin="4"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>